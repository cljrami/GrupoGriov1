---
import {
  Astronav,
  MenuItems,
  MenuIcon,
  Dropdown,
  DropdownItems,
  DropdownSubmenu,
  StickyHeader,
} from "astro-navbar";
---

<StickyHeader
  class="sticky top-0 z-20 transition-all lg:flex justify-between p-9 mx-auto font-bold"
  defaultClass="py-5 border-transparent text-slate-50"
  scrollY={70}
  activeClass="py-5 backdrop-blur-lg text-black"
>
  <Astronav closeOnClick>
    <div class="flex
 lg:flex
  justify-between
  top-0
  z-20
  transition-all">
      <a href="https://www.grio.cl">Grupo Grio</a>
      <div class="block lg:hidden">
        <MenuIcon class="w-4 h-4" />
      </div>
    </div>
    <MenuItems class="hidden lg:flex">
      <ul class="flex flex-col lg:flex-row lg:gap-6">
        <li>
          <a href="/">Inicio</a>
        </li>
        <li>
          <Dropdown class="group">
            <button class="flex items-center gap-2">
              <span>Delegaciónes</span>
              <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="3"
                stroke="currentColor"
                class="w-3 h-3 mt-0.5 group-open:rotate-180"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M19.5 8.25l-7.5 7.5-7.5-7.5"></path>
              </svg>
            </button>
            <DropdownItems class="relative">
              <div
                class="lg:absolute bg-sky-950 top-2 w-40 shadow rounded px-3 py-3"
              >
                <ul>
                  <li>
                    <a href="
                #"> Menu 1</a>
                  </li>
                  <li>
                    <a href="#">Menu 2</a>
                  </li>
                </ul>
              </div>
            </DropdownItems>
          </Dropdown>
        </li>
        <li>
          <a href="historia/">Historia</a>
        </li>

        <li>
          <a href="#">Pricing</a>
        </li>
        <li>
          <a href="/contact">Contact</a>
        </li>

        <button
          type="button"
          class="-m-2.5 inline-flex items-center justify-center rounded-lg p-2.5 bg-neutral-950 text-slate-50 font-bold"
          >Ház tu Donación
        </button>
      </ul>
    </MenuItems>
  </Astronav>
</StickyHeader>
